{
    "manifest_version": 3,
    "name": "XPath Validator",
    "version": "1.0",
    "description": "Validate XPaths on a web page",
    "permissions": [
        "tabs",
        "activeTab",
        "scripting"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/xpath(16).png",
            "48": "images/xpath(48).png",
            "128": "images/xpath(128).png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "icons": {
        "16": "images/logo192.png",
        "48": "images/logo192.png",
        "128": "images/logo512.png"
    }
}